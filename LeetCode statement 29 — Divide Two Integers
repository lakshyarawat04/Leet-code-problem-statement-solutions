#include <limits.h>
#include <stdlib.h>

int divide(int dividend, int divisor) {
    // Case 1: Overflow edge case
    if (dividend == INT_MIN && divisor == -1) {
        return INT_MAX;
    }

    // Step 2: Work with positive numbers using LONG LONG (avoid overflow)
    long long a = llabs(dividend);
    long long b = llabs(divisor);
    long long result = 0;

    // Step 3: Bit manipulation - try to subtract b * (2^x)
    while (a >= b) {
        long long temp = b;
        long long multiple = 1;

        // double the divisor until it exceeds dividend
        while ((temp << 1) <= a) {
            temp <<= 1;        // temp = temp * 2
            multiple <<= 1;    // multiple = multiple * 2
        }

        a -= temp;        // subtract largest chunk
        result += multiple;
    }

    // Step 4: Add sign
    if ((dividend > 0) ^ (divisor > 0)) {  // XOR â†’ different signs
        result = -result;
    }

    // Step 5: Return within range
    if (result > INT_MAX) return INT_MAX;
    if (result < INT_MIN) return INT_MIN;
    return (int)result;
}

